# =============================================================================
# EXCLUSIVE-CHANGE CONFIGURATION
# Copy this file to .env and fill in your values
# =============================================================================

# -----------------------------------------------------------------------------
# APPLICATION
# -----------------------------------------------------------------------------
APP_NAME=Exclusive-Change
APP_ENV=development  # development | staging | production
DEBUG=true

# -----------------------------------------------------------------------------
# DATABASE (Supabase PostgreSQL)
# -----------------------------------------------------------------------------
# Format: postgresql+asyncpg://user:password@host:port/database
# Get this from Supabase Dashboard > Settings > Database > Connection String
DATABASE_URL=postgresql+asyncpg://postgres:[YOUR-PASSWORD]@db.[YOUR-PROJECT-REF].supabase.co:5432/postgres

# Connection pool settings (tune for your workload)
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=10
DB_POOL_TIMEOUT=30

# -----------------------------------------------------------------------------
# REDIS CACHE
# -----------------------------------------------------------------------------
# Format: redis://[[username]:[password]@]host[:port]/[database]
REDIS_URL=redis://localhost:6379/0

# Cache TTL in seconds (default: 30 seconds)
CACHE_TTL_SECONDS=30

# -----------------------------------------------------------------------------
# SUPABASE AUTH (JWT Validation)
# -----------------------------------------------------------------------------
# Get these from Supabase Dashboard > Settings > API
SUPABASE_URL=https://[YOUR-PROJECT-REF].supabase.co
SUPABASE_JWT_SECRET=[YOUR-JWT-SECRET]

# JWT Algorithm (Supabase uses HS256 by default)
JWT_ALGORITHM=HS256

# -----------------------------------------------------------------------------
# API SECURITY
# -----------------------------------------------------------------------------
# Comma-separated list of allowed origins for CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# API Key prefix for evaluation endpoints
API_KEY_PREFIX=xc_live_
